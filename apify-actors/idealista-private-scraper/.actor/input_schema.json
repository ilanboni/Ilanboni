{
  "title": "Idealista Private Properties Scraper Input",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "startUrl": {
      "title": "Start URL",
      "type": "string",
      "description": "Idealista URL with ordine=da-privati-asc filter",
      "default": "https://www.idealista.it/vendita-case/milano-milano/?ordine=da-privati-asc",
      "editor": "textfield"
    },
    "maxItems": {
      "title": "Max Items",
      "type": "integer",
      "description": "Maximum number of private properties to scrape",
      "default": 100,
      "minimum": 1,
      "maximum": 10000
    },
    "proxyConfiguration": {
      "title": "Proxy Configuration",
      "type": "object",
      "description": "Apify proxy settings (RESIDENTIAL required for Idealista)",
      "default": {
        "useApifyProxy": true,
        "apifyProxyGroups": ["RESIDENTIAL"]
      },
      "editor": "proxy"
    }
  },
  "required": []
}
